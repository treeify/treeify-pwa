{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": { "~/*": ["./src/*"] },
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "noErrorTruncation": true,
    "incremental": true
  },
  "include": ["src"]
}
